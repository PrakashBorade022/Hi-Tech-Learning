<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.falya.hitechlearning.Java_History">


        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_x="4dp"
            android:layout_y="4dp"
            android:text="Android Virtual Device(AVD):"
            android:textColor="#2196F3"

            android:textSize="30dp" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_x="0dp"
            android:layout_y="52dp"
            app:srcCompat="@drawable/avd" />

        <TextView
            android:id="@+id/textVew5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_x="0dp"
            android:layout_y="362dp"
            android:text="AVD is the virtual device (virtual android phone ) that is help to test your app in developing stage."
            android:textColor="#2196F3"

            android:textSize="20dp" />

        <TextView
            android:id="@+id/txtVew5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_x="0dp"
            android:layout_y="436dp"
            android:text="You can create your own AVD in android studio.You need to download it from the AVD manager in android studio."
            android:textColor="#2196F3"

            android:textSize="20dp" />

        <TextView
            android:id="@+id/txVew5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_x="0dp"
            android:layout_y="532dp"
            android:text="Your Virtual AVD is similar looks's like your android phone.And if you don't have a android device then you and test your application in AVD ."
            android:textColor="#2196F3"

            android:textSize="20dp" />

    </AbsoluteLayout>
</ScrollView>
