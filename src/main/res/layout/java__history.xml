<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >
<AbsoluteLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.falya.hitechlearning.Java_History">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="7dp"
        android:layout_y="0dp"
        app:srcCompat="@drawable/jamesgosling" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="177dp"
        android:layout_height="226dp"
        android:layout_x="222dp"
        android:layout_y="4dp"
        app:srcCompat="@drawable/javahistory"
        tools:layout_editor_absoluteX="255dp"
        tools:layout_editor_absoluteY="90dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="91dp"
        android:layout_y="246dp"
        android:text="James Josling"
        android:textColor="#00BFFF"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="0dp"
        android:textSize="20dp"
        android:layout_y="288dp"
        android:textColor="#696969"
        android:text="Java language developed by company SUN micro systems and created by James Gosling." />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="0dp"
        android:layout_y="365dp"
        android:textColor="#696969"
        android:text="Sun micro systems started by group of students who are studying in standard university."
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="0dp"
        android:layout_y="445dp"
        android:textColor="#696969"
        android:text="These people are faced the problem in their room with electronic consumers i.e., one electronic consumable remote control is not worked on another electronic consumable. These people wanted to develop a common remote control (CRC) which is controlling all the electronic consumables. So they contacted James Gosling and requested for the project."
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="0dp"
        android:textSize="20dp"
        android:textColor="#696969"
        android:layout_y="661dp"
        android:text="James Gosling team developed a new language called as OAK. But this name is already selected by some another company. So it is renamed as Java." />


</AbsoluteLayout>


</ScrollView>
